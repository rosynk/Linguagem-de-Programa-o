package fatec;
import javax.swing.*;
/*Receba a base e a altura de um triângulo. Calcule e mostre a sua área. */
public class LtEx0103 {
    public static void main (String args []){
        int Base = Integer.parseInt(JOptionPane.showInputDialog("Informe a base do triângulo: "));
        int Altura = Integer.parseInt(JOptionPane.showInputDialog("Informe a altura do triângulo: "));
        double Area;
        Area = (Altura * Base)/2;
        System.out.println ("A área vai ser: "+Area);
    }
}
