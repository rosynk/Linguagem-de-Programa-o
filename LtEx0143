package fatec;

import javax.swing.*;

/*Calcule e mostre quantos anos serão necessários para que Ana 
seja maior que Maria sabendo que Ana tem 1,10 m e cresce 3 cm ao 
ano e Maria tem 1,5 m e cresce 2 cm ao ano*/
public class LtEx0143 {

    public static void main(String[] args) {
        double crescimentoAna = 1.10, crescimentoMaria = 1.5;
        int i = 0;
        do {
            crescimentoAna += 0.3;
            crescimentoMaria += 0.2;
            i += i;
        } while (crescimentoAna < crescimentoMaria);
        System.out.print (i);
    }
}
